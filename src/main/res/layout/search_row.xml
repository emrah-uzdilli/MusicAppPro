<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="50"
        android:orientation="vertical"
        android:layout_height="match_parent">



    <ImageView

        android:visibility="gone"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:background="@drawable/b"
        android:id="@+id/iv_music1"
        />

        <com.jackandphantom.circularimageview.RoundedImage
            android:layout_width="150dp"
            android:layout_height="115dp"
            app:rounded_radius="15"
            android:src="@drawable/b"
            android:id="@+id/iv_music"
             />


        <TextView
            android:visibility="gone"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="06:00"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:id="@+id/musictime"
           />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="80"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1.3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="#000000"
                android:text="..."
                android:layout_marginTop="5dp"
                android:id="@+id/title"

                />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Content"
                android:id="@+id/songtext"
                android:maxLines="1"
                android:textColor="#000"
                />

            <WebView
                android:visibility="gone"
                android:id="@+id/webView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </WebView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">



            <Button
                android:text="@string/play_song"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_music_note_black_24dp"
                android:id="@+id/btn_play_stop"/>


            <Button

                android:text="MP4"
                android:visibility="gone"
                android:id="@+id/bt_downvideo"
                android:drawableRight="@drawable/ic_file_download_black_24dp"
                android:textColor="#FFFFFF"
                android:background="#03A9F4"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />


            <Button
                android:id="@+id/downbtn"
                android:text="MP3"
                android:drawableRight="@drawable/ic_file_download_black_24dp"
                android:textColor="#FFFFFF"
                android:background="#10A001"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />




        </LinearLayout>

    </LinearLayout>




</LinearLayout>